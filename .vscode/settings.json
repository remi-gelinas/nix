{
    "editor.formatOnSave": true,
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nixd",
    "nix.serverSettings": {
        "nixd": {
            "formatting": {
                "command": "nixfmt"
            },
            "eval": {
                "target": {
                    "args": [
                        "-f",
                        "default.nix"
                    ],
                    "installable": "debug",
                },
                "depth": 10
            },
            "options": {
                "enable": true,
                "target": {
                    "args": [
                        "-f",
                        "default.nix"
                    ],
                    "installable": "debug.options"
                }
            }
        }
    }
}